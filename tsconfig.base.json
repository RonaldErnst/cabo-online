{
    "compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6"],
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "baseUrl": ".",
        "rootDir": ".",
        "paths": {
            "@frontend/*": ["./frontend/*"],
            "@backend/*": ["./backend/src/*"],
            "@common/*": ["./common/src/*"],
        }
    },

}